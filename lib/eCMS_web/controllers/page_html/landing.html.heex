  <style>
    /* Slideshow fade effect */
    .slide {
      position: absolute;
      inset: 0;
      width: 100%;
      height: 100%;
      object-fit: cover;
      opacity: 0;
      transition: opacity 1.5s ease-in-out;
    }
    .slide.active {
      opacity: 1;
    }

    /* Matrix raining effect */
    .matrix-overlay {
      position: fixed;
      inset: 0;
      pointer-events: none;
      z-index: -10;
      display: flex;
      gap: 1.25rem;
      padding: 1rem;
      overflow: hidden;
    }
    .matrix {
      font-family: monospace;
      font-size: 22px;
      line-height: 26px;
      color: rgba(16, 185, 129, 0.75); /* brighter emerald */
      text-shadow: 0 0 6px rgba(16, 185, 129, 0.9), 0 0 12px rgba(16, 185, 129, 0.7);
      white-space: nowrap;
      animation: matrixAnim 18s linear infinite;
      font-weight: 600;
      flex: 1 1 140px; /* grow to fill width, keep reasonable column width */
    }
    @keyframes matrixAnim {
      0% { transform: translateY(0); }
      100% { transform: translateY(-100%); }
    }

    /* AI brain pulse */
    .pulse {
      animation: pulseAnim 6s ease-in-out infinite;
    }
    @keyframes pulseAnim {
      0%, 100% { transform: scale(1); opacity: 0.15; }
      50% { transform: scale(1.05); opacity: 0.25; }
    }
  </style>
</head>
